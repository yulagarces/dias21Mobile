<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_subitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_subitem_sanar_no_sel"
    android:paddingTop="10dp"
    android:layout_margin="15dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/rb_subcategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_rb_no_sel"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txt_subcategoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TextView"
        android:gravity="left"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/lista_sanar_letra"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:fontFamily="@font/recoleta"/>
</LinearLayout>