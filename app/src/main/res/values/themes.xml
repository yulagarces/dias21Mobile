    </style>
    <style name="estilo_textos_categorias">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="estilo_textos_verdes">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="estilo_textos_general">
        <item name="android:textColor">#406587</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/recoleta</item>
    </style>
    <style name="estilo_textos_titulos">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="estilo_textos_titulos_inicio">
        <item name="android:textColor">#F0D99F</item>
        <item name="android:textSize">120sp</item>
        <item name="android:gravity">fill</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:fontFamily">@font/soul_signature</item>
    </style>
    <style name="estilo_textos_titulos_numeros">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">140sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/soul_signature</item>
    </style>

    <style name="estilo_textos_dialogo">
        <item name="android:textColor">#406587</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/recoleta</item>
    </style>
    <style name="estilo_item_musica_numero">
        <item name="android:textColor">@color/colorm_numero</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/recoleta</item>
    </style>
    <style name="estilo_item_musica_nombre">
        <item name="android:textColor">@color/colorm_nombre</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/recoleta</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>
    <style name="estilo_item_musica_autor">
        <item name="android:textColor">@color/colorm_autor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">5dp</item>
