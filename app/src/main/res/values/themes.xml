    <style name="NavigationViewTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">40sp</item> <!-- Tama침o del texto -->
        <item name="android:typeface">@font/recoleta</item> <!-- Tipo de letra -->
    </style>
    <style name="boton_general" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_redondo_largo</item> <!-- Fondo del bot칩n -->
        <item name="android:fontFamily">@font/recoleta</item>
